<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceRecorder">

    <Button
        android:id="@+id/activity_main_record"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="#7EE682"
        android:text="Start Recording"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/activity_main_stop"
        android:layout_width="146dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="#E89191"
        android:text="Stop Recording"
        app:layout_constraintStart_toStartOf="@+id/activity_main_record"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_record" />

    <Button
        android:id="@+id/activity_main_play"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="#86C5E1"
        android:text="Play Recording"
        app:layout_constraintStart_toStartOf="@+id/activity_main_stop"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_stop" />

    <Button
        android:id="@+id/activity_main_stop_playing"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#C6BA53"
        android:text="Stop Playing"
        app:layout_constraintStart_toStartOf="@+id/activity_main_play"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_play" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="357dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72"
        app:srcCompat="@drawable/record" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Voice Recorder"
        android:textColor="#0C0C0C"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>